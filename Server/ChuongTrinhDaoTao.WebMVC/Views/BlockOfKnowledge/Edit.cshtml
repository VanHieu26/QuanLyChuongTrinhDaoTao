@model ChuongTrinhDaoTao.WebMVC.Model.BlockOfKnowledgeDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>
<form class="col-md-6 grid-margin stretch-card" method="post" asp-action="Edit">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">BlockOfKnowledge</h4>
            <div class="form-group">
                <label asp-for="BlockOfKnowledgeId" class="control-label"></label>
                <input type="text" readonly asp-for="BlockOfKnowledgeId" class="form-control form-control-lg" placeholder="BlockOfKnowledgeId" aria-label="BlockOfKnowledgeId">
                <span asp-validation-for="BlockOfKnowledgeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BlockOfKnowledgeName" class="control-label"></label>
                <input type="text" asp-for="BlockOfKnowledgeName" class="form-control form-control-lg" placeholder="BlockOfKnowledgeName" aria-label="BlockOfKnowledgeName">
                <span asp-validation-for="BlockOfKnowledgeName" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary btn-icon-text">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Submit
            </button>
            <a asp-action="Index" asp-controller="BlockOfKnowledge" type="button" class="btn btn-danger btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Cancer
            </a>

        </div>

    </div>
</form>