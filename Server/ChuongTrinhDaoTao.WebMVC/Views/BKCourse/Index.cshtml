@model IEnumerable<ChuongTrinhDaoTao.WebMVC.BussinessModel.BlockOfKnowledge_CourseBM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="BKCourse" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>BlockName</th>
                            <th>CourseName</th>
                            <th>MajorName</th>
                            <th>CohortName</th>
                          
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                              
                                <td>@item.BlockOfKnowledgeName</td>
                                <td>@item.CourseName</td>
                                <td>@item.MajorName</td>
                                <td>@item.CohortName</td>

                                <td>
                                    <a asp-action="Details" asp-controller="BKCourse" asp-route-id="@item.BlockOfKnowledgeId" class="btn btn-info btn-icon-text">Detail</a>
                                    <a asp-action="Edit" asp-controller="BKCourse" asp-route-id="@item.BlockOfKnowledgeId" class="btn btn-success btn-icon-text">Edit</a>
                                    <a asp-action="Delete" asp-controller="BKCourse" asp-route-id="@item.BlockOfKnowledgeId" class="btn btn-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
