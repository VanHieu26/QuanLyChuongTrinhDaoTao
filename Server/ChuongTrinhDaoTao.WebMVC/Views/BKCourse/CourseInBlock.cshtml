@model ChuongTrinhDaoTao.WebMVC.BussinessModel.CourseBlockBM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-header">
            <h4>
                @Model.BockOfKnowledgeName
            </h4>
        </div>
        <div class="card-body">
            

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Credirs</th>
                            <th>Materials</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Courses)
                        {
                            <tr>
                                <td>@item.CourseId</td>
                                <td>@item.CourseCode</td>
                                <td>@item.CourseName</td>
                                <td>@item.CodeCredits</td>
                                <td>@item.CourseMaterials</td>

                                <td>
                                    <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-success btn-icon-text">Edit</a>
                                    <a asp-action="Details" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-info btn-icon-text">Details</a>
                                    <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

