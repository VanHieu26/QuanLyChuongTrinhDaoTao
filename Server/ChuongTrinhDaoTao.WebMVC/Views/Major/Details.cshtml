@model MajorDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="col-sm-6 grid-margin">
    <div class="card">
        <div class="card-body">
            <h5>@Model.MajorName</h5>
            <div class="row">
                <div class="col-8 col-sm-12 col-xl-8 my-auto">
                    <div class="d-flex d-sm-block d-md-flex align-items-center">
                        <h2 class="mb-0">@Model.MajorDescription</h2>
                        <p class="text-success ms-2 mb-0 font-weight-medium">@Model.MajorFounding</p>
                    </div>
                    <h6 class="text-muted font-weight-normal">@Model.FacultyName</h6>

                </div>
                <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                    <i class="icon-lg mdi mdi-codepen text-primary ms-auto"></i>
                </div>

            </div>
            <div class="row">
                <a asp-action="Edit" asp-controller="Major" type="button" class="btn btn-success btn-icon-text">
                    <i class="mdi mdi-upload btn-icon-prepend"></i> Edit
                </a>
                <a asp-action="Index" asp-controller="Major" type="button" class="btn btn-danger btn-icon-text">
                    <i class="mdi mdi-upload btn-icon-prepend"></i> Cancer
                </a>
            </div>
        </div>

    </div>
</div>