@model MajorDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Update</h1>



<form class="col-md-6 grid-margin stretch-card" method="post">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Major</h4>
            <div class="form-group">
                <label asp-for="MajorId" class="control-label"></label>
                <input type="text" asp-for="MajorId" class="form-control form-control-lg" readonly placeholder="MajorId" aria-label="MajorId">
                <span asp-validation-for="MajorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MajorName" class="control-label"></label>
                <input type="text" asp-for="MajorName" class="form-control form-control-lg" readonly placeholder="MajorName" aria-label="MajorName">
                <span asp-validation-for="MajorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MajorDescription" class="control-label"></label>
                <input type="text" asp-for="MajorDescription" class="form-control form-control-lg" readonly placeholder="MajorDescription" aria-label="MajorDescription">
                <span asp-validation-for="MajorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MajorFounding" class="control-label"></label>
                <input type="date" asp-for="MajorFounding" class="form-control form-control-lg" readonly placeholder="MajorFounding" aria-label="MajorFounding">
                <span asp-validation-for="MajorFounding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label"></label>
                <input type="text" asp-for="FacultyName" class="form-control form-control-lg" readonly placeholder="FacultyName" aria-label="MajorFounding">
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
            <a asp-action="DeleteMajor" asp-route-id="@Model.MajorId" type="submit" class="btn btn-primary btn-icon-text">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Submit
            </a>
            <a asp-action="Index" asp-controller="Major" type="button" class="btn btn-danger btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Cancer
            </a>

        </div>

    </div>
</form>