@model IEnumerable<MajorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="Major" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>CreateAt</th>
                            <th>FacultyName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MajorId</td>
                                <td>@item.MajorName</td>
                                <td>@item.MajorDescription</td>
                                <td>@item.MajorFounding</td>
                                <td>@item.FacultyName</td>
                                <td>
                                    <a asp-action="Details" asp-controller="Major" asp-route-id="@item.MajorId" class="btn btn-info btn-icon-text">Detail</a>
                                    <a asp-action="Update" asp-controller="Major" asp-route-id="@item.MajorId" class="btn btn-success btn-icon-text">Edit</a>
                                    <a asp-action="Delete" asp-controller="Major" asp-route-id="@item.MajorId" class="btn btn-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Scripts -->

