@model IEnumerable<Cohort_MajorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>



<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="Cohort" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>CohortName</th>
                            <th>MajorName</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>@item.CohortName</td>
                                <td>@item.MajorName</td>
                                <td>
                                    <a asp-action="Details" asp-controller="CohortMajor" asp-route-majorId="@item.MajorId" asp-route-cohortId="@item.CohortId" class="btn btn-info btn-icon-text">Detail</a>
                                   
                                    <a asp-action="Delete" asp-controller="CohortMajor" asp-route-majorId="@item.MajorId" asp-route-cohortId="@item.CohortId" class="btn btn-danger btn-icon-text">Delete</a>
                                    <a asp-action="ChuongTrinhDaoTao" asp-controller="BKCourse" asp-route-majorId="@item.MajorId" asp-route-cohortId="@item.CohortId" class="btn btn-success btn-icon-text">CTDT</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>