@model Cohort_MajorDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>



<form class="col-md-6 grid-margin stretch-card" method="post">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cohort_Major</h4>
            <div class="form-group">
                <label>MajorId</label>
                <select asp-for="MajorId" class="form-control" style="width:100%">
                    @foreach (var item in ViewBag.Majors)
                    {
                        <option value="@item.MajorId">@item.MajorName</option>
                    }

                </select>
            </div>
          
            <div class="form-group">
                <label>CohortId</label>
                <select asp-for="CohortId" class="form-control" style="width:100%">
                    @foreach (var item in ViewBag.Cohorts)
                    {
                        <option value="@item.CohortId">@item.CohortName</option>
                    }

                </select>
            </div>
           


            <button type="submit" class="btn btn-primary btn-icon-text">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Submit
            </button>

            <a asp-action="Index" asp-controller="CohortMajor" type="button" class="btn btn-danger btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Cancer
            </a>

        </div>

    </div>
</form>