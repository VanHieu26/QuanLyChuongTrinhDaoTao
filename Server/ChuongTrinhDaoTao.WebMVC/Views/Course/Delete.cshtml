@model CourseDto
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>

<form class="col-md-6 grid-margin stretch-card" method="post">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course</h4>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input type="text" asp-for="CourseId" class="form-control form-control-lg" placeholder="CourseId" readonly aria-label="CourseId">
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseCode" class="control-label"></label>
                <input type="text" asp-for="CourseCode" class="form-control form-control-lg" placeholder="CourseCode" aria-label="CourseCode">
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input type="text" asp-for="CourseName" class="form-control form-control-lg" placeholder="CourseName" aria-label="CourseName">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeCredits" class="control-label"></label>
                <input type="text" asp-for="CodeCredits" class="form-control form-control-lg" placeholder="CodeCredits" aria-label="CodeCredits">
                <span asp-validation-for="CodeCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseMaterials" class="control-label"></label>
                <input type="text" asp-for="CourseMaterials" class="form-control form-control-lg" placeholder="CourseMaterials" aria-label="CourseMaterials">
                <span asp-validation-for="CourseMaterials" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-icon-text">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Submit
            </button>
            <a asp-action="Index" asp-controller="Course" type="button" class="btn btn-danger btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Cancer
            </a>
        </div>
    </div>
</form>