@model IEnumerable<ChuongTrinhDaoTao.WebMVC.BussinessModel.TuitionBM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="Tuitions" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TuitionId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TuitionName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TuitionDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.TuitionTypeName)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TuitionId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TuitionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TuitionDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TuitionTypeName)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-controller="Tuitions" asp-route-id="@item.TuitionId" class="btn btn-info btn-icon-text">Detail</a>
                                    <a asp-action="Edit" asp-controller="Tuitions" asp-route-id="@item.TuitionId" class="btn btn-success btn-icon-text">Edit</a>
                                    <a asp-action="Delete" asp-controller="Tuitions" asp-route-id="@item.TuitionId" class="btn btn-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>