@model IEnumerable<FacultyDto>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="Faculties" asp-action="Create">Create</a>
<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Faculty Table</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Total Major</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.FacultyId
                                </td>
                                <td>
                                    @item.FacultyName
                                </td>
                                <td>
                                    @item.FacultyDescription
                                </td>
                                <td>
                                    @item.MajorCount
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.FacultyId">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FacultyId">Delete</a>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.FacultyId">Edit</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
