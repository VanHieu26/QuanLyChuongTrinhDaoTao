@model IEnumerable<CohortDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="col-lg-12 grid-margin bg-white stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-outline-success btn-sm" style="width:200px;margin-bottom:20px;" asp-controller="Cohort" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table id="bootstrap-data-table" class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>StartDay</th>
                            <th>EndDay</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CohortId</td>
                                <td>@item.CohortName</td>
                                <td>@item.CohortDescription</td>
                                <td>@item.StartDay</td>
                                <td>@item.EndDay</td>
                                <td>
                                    <a asp-action="Details" asp-controller="Cohort" asp-route-id="@item.CohortId" class="btn btn-info btn-icon-text">Detail</a>
                                    <a asp-action="Edit" asp-controller="Cohort" asp-route-id="@item.CohortId" class="btn btn-success btn-icon-text">Edit</a>
                                    <a asp-action="Delete" asp-controller="Cohort" asp-route-id="@item.CohortId" class="btn btn-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>